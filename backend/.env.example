# Database Configuration
DATABASE_URL=postgresql://sentinel_user:sentinel_password@localhost:5432/sentinel_ai

# JWT Configuration
# Generate secure secrets using: openssl rand -base64 32
JWT_ACCESS_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_SECURE_RANDOM_STRING_MIN_32_CHARS
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (Resend)
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxx
EMAIL_FROM=Sentinel AI <noreply@yourdomain.com>

# Application URLs
APP_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3000
NODE_ENV=development

# CSRF Protection
CSRF_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Cookie Configuration
COOKIE_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_MIN_32_CHARS

# Server Configuration
PORT=3001
